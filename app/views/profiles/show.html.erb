<div class="container position-relative mt-3">
  <div class="position-relative w-100">
    <%= link_to image_tag("back.png", width: "40px", height: "40px"), root_path, class: "position-absolute start-0 ms-3" %>
    <%= link_to image_tag("log_out.png", width: "40px", height: "40px"), destroy_user_session_path, data: { turbo_method: :delete }, class: "position-absolute end-0 me-3" %>
  </div>

  <div class="profile row justify-content-center baseline">
    <% username = current_user.email.split('@').first %>

    <%= image_tag asset_path("users/#{username}.jpg"), class:"avatar-large", alt:"User profile" %>
    <h1 class="text-center mt-2 text-capitalize"><%= username %></h1>
  </div>

  <hr class="mb-5">

  <div class="profile-card">
    <% @vinyles.each do |vinyle| %>
    <%= link_to vinyle_path(vinyle) do %>
          <div class="vinyles-card d-flex justify-content-between align-items-center mb-4">
            <%= cl_image_tag vinyle.photo.key, class:"avatar", alt:"image-vinyles" %>
            <div class="vinyle-info">
              <h2><%= vinyle.title %></h2>
              <p><%= vinyle.description %></p>
            </div>
            <div class="container m-0 d-flex align-items-center justify-content-center pastille">3</div>
          </div>
        <% end %>
      <% end %>
  </div>
</div>

<div class="container d-flex justify-content-center mt-5">
  <%= link_to new_vinyle_path, class: "btn-add" do %>
    <i class="fa-solid fa-plus"></i>
  <% end %>
</div>
