<div class="container">

<%= link_to image_tag("back.png", width: "40px", height: "40px"), root_path, class: "mt-5 d-block" %>

  <div class="profile row justify-content-center baseline">
    <%= image_tag "profile_user.jpg", class:"avatar-large", alt:"User profile" %>
    <h1 class="text-center mt-2">User Name</h1>
  </div>
  <hr class="mb-5">


  <div class="profile-card">
    <% @vinyles.each do |vinyle| %>
    <%= link_to vinyle_path(vinyle) do %>
          <div class="vinyles-card d-flex justify-content-between align-items-center mb-4">
            <%= image_tag "vinyl-record.png", class:"avatar", alt:"image-vinyles" %>
            <div class="vinyle-info">
              <h2><%= vinyle.title %></h2>
              <p><%= vinyle.description %></p>
            </div>
            <div class="container m-0 d-flex align-items-center justify-content-center pastille">3</div>
          </div>
        <% end %>
      <% end %>
  </div>
</div>



<div class="container d-flex justify-content-center mt-5">
  <%= link_to new_vinyle_path, class: "btn-add" do %>
    <i class="fa-solid fa-plus"></i>
  <% end %>
</div>
