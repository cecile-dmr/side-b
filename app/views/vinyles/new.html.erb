<h1>Ajoute ton Vinyle</h1>
<% if @vinyle.errors.any? %>
  <div class="alert alert-danger">
    <h4>Erreur :</h4>
    <ul>
      <% @vinyle.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @vinyle, local: true, html: { multipart: true } do |form| %>
  <div>
    <%= form.label :title, "Titre du vinyle" %>
    <%= form.text_field :title, required: true %>
  </div>

  <div>
    <%= form.label :artist, "Artiste" %>
    <%= form.text_field :artist, required: true %>
  </div>

  <div>
    <%= form.label :year, "AnnÃ©e" %>
    <%= form.number_field :year, required: true %>
  </div>

  <div>
    <%= form.label :description, "Description" %>
    <%= form.text_area :description, required: true %>
  </div>

  <div class="mt-3">
    <%= form.submit "Valider", class: "btn btn-primary" %>
  </div>
<% end %>
