<%= turbo_frame_tag "match_modal" do %>

  <div id="matchModal" style="backdrop-filter: blur(10px) contrast(30%);" class="modal fade show d-block" tabindex="-1" aria-labelledby="matchModalLabel" data-custom-swiper-target="button">
    <div class="modal-dialog modal-dialog-centered show">
      <div class="modal-content text-center p-4" style="border-radius: 20px; background-color: #FFF2F3;">
        <button type="button" class="btn-close position-absolute top-0 end-0 m-3" data-bs-dismiss="modal hide" aria-label="Close" data-action="click->custom-swiper#close"></button>
        <h1 style="font-size: 24px;">Side.B</h1>

          <div class="modal-vinyles-container">
            <div class="vinyle vinyle-left">
              <%= image_tag "vinyl1.png", alt: "Vinyle 1", class: "vinyle-img" %>
            </div>
            <div class="vinyle vinyle-right">
              <%= image_tag "vinyl-record.png", alt: "Vinyle 2", class: "vinyle-img" %>
            </div>
          </div>

        <h1 style="font-size: 30px;" class="mb-2">Le groove est lancé !</h1>

        <p>Envoie un message pour échanger ton vinyle et discuter entre passionnés !</p>
          <%= simple_form_for [match, message],html: { class:"d-flex flex-end m-0 overflow-hidden", data: { controller: "message", action:"submit->message#redirect", id: match.id}} do |f| %>
            <%= f.input :content, label: false, input_html: {  class:"px-2 h-100" }, wrapper_html: {style:"min-height: 40px; flex-grow: 1" } %>
            <%= button_tag(type: 'submit', class: 'input-group-text', style: 'background: #859cd2', name:"modal", value:"true" ) do %>
              <i class="fa fa-sm fa-paper-plane"></i>
            <% end %>
          <% end %>

      </div>
    </div>
  </div>
<% end %>



