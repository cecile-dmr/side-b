<div class='container mt-5 text-devise'>
  <div class='mx-4'>
    <div class='d-flex justify-content-center'><h1>Log in</h1></div>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { class: "form-field", autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { class: "form-field", autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class:'text-devise div-loc' %>
      </div>
    <% end %>
<br>
<br>
<br>
<br>
    <%= render "devise/shared/links" %>
  </div>
</div>
